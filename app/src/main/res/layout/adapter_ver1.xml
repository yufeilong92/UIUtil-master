    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lib_ui_common_color_line" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_ver_inor"
        android:layout_width="match_parent"
        android:layout_height="65dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lib_ui_common_color_line" />
</LinearLayout>
